<h1>Edditing Book</h1>

<%= form_with model:@book do |f| %>

    <% if @book.errors.any? %>
     <div class="error_explanation">
       <div class="error_explanation_h2"><%= @book.errors.count %>errors prohibited this book from being saved:</div>
        <ul>
         <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
         <% end %>
        </ul>
     </div>
    <% end %>
    

 <div class ="field">
  <label for="book_title">Title</label>
  <div class ="book_title"><%= f.text_field :title %></div>
 </div>

 <div class ="field">
  <label for="book_body">Body</label>
  <div class ="book_body"><%= f.text_area :body %></div>
 </div>

 <div class="actions">
  <%=f.submit'Update Book' %>
 </div>
 
<% end %>

<%= link_to "Show", book_path(@book.id), {class: "nav-link"} %>
